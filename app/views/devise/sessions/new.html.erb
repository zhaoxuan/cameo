<h2>Design in by zhaoxuan</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
    <%= f.email_field :email, :class => 'input-medium', :placeholder => 'Email', :style => 'width:230px;' %>
  </div>

  <div>
    <%= f.password_field :password, :class => 'input-medium', :placeholder => 'Password', :style => 'margin-top:7px;' %>
    <%= f.submit "Sign in", :class => 'btn btn-primary' %>
  </div>

<% end %>
